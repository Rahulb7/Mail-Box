<%- include('partials/header') %>

<div class="container">
  <div class="jumbotron centered">
    <i class="fas fa-envelope fa-6x"></i>
    <h1 class="display-3">Send Mail</h1>

    <form action="/submit" method="POST">
      <div class="form-group">
        <input type="email" class="form-control text-center" name="to" placeholder="Send Mail to?">
        <input type="text" class="form-control text-center" name="subject" placeholder="Subject">
        <textarea class="form-control text-center" name="message" rows="5" cols="80"></textarea>
      </div>
      <button type="submit" class="btn btn-dark">SEND</button>
    </form>
  </div>
</div>
<%- include('partials/footer') %>
